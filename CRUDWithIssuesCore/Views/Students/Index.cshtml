@{
    ViewData["Title"] = "Student Page";
    @model IEnumerable<Student>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <a asp-action="Create">Create New Student</a>
    <table>
        <tr><td>ID</td><td>Name</td><td>Date of Birth</td></tr>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.Name</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td><a asp-action="Edit" asp-route-id="@student.StudentId">Edit</a></td>
                <td><a onclick="return confirm('Are you sure you want to delete this?')" asp-action="Delete" asp-route-id="@student.StudentId">Delete</a></td>
            </tr>
        }
    </table>
</div>
